<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	   <servlet>
  	   	  <servlet-name>addMedicineServlet</servlet-name>	
  	      <servlet-class>user.file.addMedicine</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	  <servlet-name>addMedicineServlet</servlet-name>	
  	   	  <url-pattern>/addMedicineServlet</url-pattern>
       </servlet-mapping>
       <servlet>
  	   	<servlet-name>registerServlet</servlet-name>	
  	   	<servlet-class>user.file.HandleRegister</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	<servlet-name>registerServlet</servlet-name>	
  	   	<url-pattern>/registerServlet</url-pattern>
       </servlet-mapping>
       <servlet>
  	  	 <servlet-name>loginServlet</servlet-name>	
  	  	 <servlet-class>user.file.HandleLogin</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	<servlet-name>loginServlet</servlet-name>	
  	   	<url-pattern>/loginServlet</url-pattern>
       </servlet-mapping>
       <servlet>
  		<servlet-name>deleteServlet</servlet-name>	
  		<servlet-class>user.file.HandleDelete</servlet-class>
       </servlet>
       <servlet-mapping>
  		<servlet-name>deleteServlet</servlet-name>	
  		<url-pattern>/deleteServlet</url-pattern>
       </servlet-mapping>
	<servlet>
  	  	 <servlet-name>queryServlet</servlet-name>	
  	  	 <servlet-class>user.file.QueryRecord</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	<servlet-name>queryServlet</servlet-name>	
  	   	<url-pattern>/queryServlet</url-pattern>
       </servlet-mapping>
	<servlet>
  	   	<servlet-name>searchByConditionServlet</servlet-name>	
  	   	<servlet-class>user.file.SearchByCondition</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	<servlet-name>searchByConditionServlet</servlet-name>	
  	   	<url-pattern>/searchByConditionServlet</url-pattern>
       </servlet-mapping>
       <servlet>
  	  	 <servlet-name>exitServlet</servlet-name>	
  	  	 <servlet-class>user.file.HandleExit</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	<servlet-name>exitServlet</servlet-name>	
  	   	<url-pattern>/exitServlet</url-pattern>
       </servlet-mapping>
	<servlet>
  	  	 <servlet-name>collectServlet</servlet-name>	
  	  	 <servlet-class>user.file.Collection</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	<servlet-name>collectServlet</servlet-name>	
  	   	<url-pattern>/collectServlet</url-pattern>
       </servlet-mapping>
       
       <servlet>       
  	  	 <servlet-name>medicineUpdateServlet</servlet-name>	
  	  	 <servlet-class>user.file.MedicineUpdate</servlet-class>
       </servlet>
       <servlet-mapping>
  	   	<servlet-name>medicineUpdateServlet</servlet-name>	
  	   	<url-pattern>/medicineUpdateServlet</url-pattern>
       </servlet-mapping>
       
      <welcome-file-list>
    		<welcome-file>inputRegisterMess.jsp</welcome-file>
  	  </welcome-file-list>
       
</web-app>

